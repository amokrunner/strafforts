<body class="hold-transition skin-black-light sidebar-mini page-loading" data-ga-tracking-id="<%= ENV['GOOGLE_ANALYTICS_TRACKING_CODE']%>" data-hotjar-id="<%= ENV['HOTJAR_ID'] %>">
  <div id="fb-root"></div>
  <div class="wrapper">

  <%= render 'header' %>
  <%= render 'sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">

    <% unless Settings.app.global_message.blank? %>
      <div class="global-message bg-aqua">
        <span><%= Settings.app.global_message %></span>
      </div>
    <% end %>

    <div class="global-message bg-yellow hidden-md-up">
      <span>For better Strafforts user experience with more data displayed, please consider using devices with larger screens.</span>
    </div>

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1><%= @page_title %></h1>
      <ol class="breadcrumb">
        <li>
          <a class="show-overview" href="#">
            <i class="fa fa-home"></i>
            <%= Settings.app.name %>
          </a>
        </li>
        <li class="active"><%= @page_title %></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content" id="main-content">
      <div class="row">
        <div class="col-md-4 col-sm-12">
          <div class="pricingTable green">
            <div class="pricingTable-header">
              <h3 class="title">FREE</h3>
              <span class="sub-title">Lifetime</span>
              <span class="year">Free <br>Lifetime</span>
            </div>
            <div class="price-value">
              <div class="value">
                <span class="currency"><%= Settings.app.currency_symbol %></span>
                <span class="amount">0</span>
                <span class="month">/forever</span>
              </div>
            </div>
            <div class="pricing-content-container">
              <h3 class="pricing-content-header">Views</h3>
              <ul class="pricing-content">
                <li>Overview</li>
                <li>Best Efforts</li>
                <li class="partial-disable">
                  <span class="has-tooltip" data-toggle="tooltip"
                    title="Only for Marathon, Half Marathon, 10k and 5k.">
                    PBs by Distances<i class="fa fa-question-circle" aria-hidden="true"></i>
                  </span>
                </li>
                <li class="partial-disable">
                  <span class="has-tooltip" data-toggle="tooltip"
                    title="Only for Marathon, Half Marathon, 10k and 5k.">
                    Races by Distances<i class="fa fa-question-circle" aria-hidden="true"></i>
                  </span>
                </li>
                <li class="disable">Races Timeline</li>
                <li class="disable">Races by Year</li>
              </ul>

              <h3 class="pricing-content-header">Processor</h3>
              <ul class="pricing-content">
                <li class="partial-disable">Every 12 Hours</li>
                <li class="disable">On Demand</li>
              </ul>

              <h3 class="pricing-content-header">Misc.</h3>
              <ul class="pricing-content">
                <li class="disable">Reset Profile</li>
                <li class="disable">Prompt Support</li>
              </ul>
            </div>
            <% if @is_current_user %>
              <button class="pricingTable-signup btn btn-block" disabled>Free</button>
            <% end %>
          </div>
        </div>

        <div class="col-md-4 col-sm-12">
          <div class="pricingTable yellow">
            <div class="pricingTable-header">
              <h3 class="title">PRO</h3>
              <span class="sub-title">90-day</span>
              <span class="year">Pay Now<br><%= Settings.app.currency_symbol %><%= @ninety_day_pro_plan.amount %></span>
            </div>
            <div class="price-value">
              <div class="value">
                <span class="currency"><%= Settings.app.currency_symbol %></span>
                <span class="amount">
                  <%= @ninety_day_pro_plan.amount_per_month.to_i %>.<span><%= (@ninety_day_pro_plan.amount_per_month.modulo(1) * 100).to_i %></span>
                </span>
                <span class="month">/month</span>
              </div>
            </div>
            <div class="pricing-content-container">
              <h3 class="pricing-content-header">Views</h3>
              <ul class="pricing-content">
                <li>Overview</li>
                <li>Best Efforts</li>
                <li>PBs by Distances</li>
                <li>Races by Distances</li>
                <li>Races Timeline</li>
                <li>Races by Year</li>
              </ul>

              <h3 class="pricing-content-header">Processor</h3>
              <ul class="pricing-content">
                <li>Every 4 Hours</li>
                <li>On Demand</li>
              </ul>

              <h3 class="pricing-content-header">Misc.</h3>
              <ul class="pricing-content">
                <li>Reset Profile</li>
                <li class="disable">50% Discount</li>
              </ul>
            </div>
            <% if @is_current_user %>
              <button id="purchase-90-day-pro" data-id="<%= @ninety_day_pro_plan.id %>" class="pricingTable-signup btn btn-block">
                <%= @athlete.pro_subscription? ? 'Renew' : 'Upgrade' %>
              </button>
            <% end %>
          </div>
        </div>

        <div class="col-md-4 col-sm-12">
          <div class="pricingTable">
            <div class="pricingTable-header">
              <h3 class="title">PRO </h3>
              <span class="sub-title">Annual</span>
              <span class="year">Only <br><%= Settings.app.currency_symbol %><%= @annual_pro_plan.amount %>/year</span>
            </div>
            <div class="price-value">
              <div class="value">
                <span class="currency"><%= Settings.app.currency_symbol %></span>
                <span class="amount">
                  <%= @annual_pro_plan.amount_per_month.to_i %>.<span><%= (@annual_pro_plan.amount_per_month.modulo(1) * 100).to_i %></span>
                </span>
                <span class="month">/month</span>
              </div>
            </div>
            <div class="pricing-content-container">
              <h3 class="pricing-content-header">Views</h3>
              <ul class="pricing-content">
                <li>Overview</li>
                <li>Best Efforts</li>
                <li>PBs by Distances</li>
                <li>Races by Distances</li>
                <li>Races Timeline</li>
                <li>Races by Year</li>
              </ul>

              <h3 class="pricing-content-header">Processor</h3>
              <ul class="pricing-content">
                <li>Every 4 Hours</li>
                <li>On Demand</li>
              </ul>

              <h3 class="pricing-content-header">Misc.</h3>
              <ul class="pricing-content">
                <li>Reset Profile</li>
                <li>50% Discount</li>
              </ul>
            </div>

            <% if @is_current_user %>
              <button id="purchase-annual-pro" data-id="<%= @annual_pro_plan.id %>" class="pricingTable-signup btn btn-block">
                <%= @athlete.pro_subscription? ? 'Renew' : 'Upgrade' %> 
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </div><!-- /.content-wrapper -->

  <%= render 'payment' %>

  <%= render 'footer' %>

  <% if @is_current_user %>
    <%= render 'settings' %>
  <% end %>

  </div><!-- ./wrapper -->

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'athletes' %>
  <%= javascript_pack_tag 'athletes' %>

</body>
