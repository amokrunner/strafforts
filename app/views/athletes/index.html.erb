<body class="hold-transition skin-black-light sidebar-mini page-loading">

  <%= render :partial => 'shared/gtm_body' %>

  <div id="fb-root"></div>
  <div class="wrapper">

    <%= render 'header' %>
    <%= render 'sidebar' %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <% unless ENV['GLOBAL_MESSAGE'].blank? %>
      <div class="global-message bg-gray-light text-center">
        <%= ENV['GLOBAL_MESSAGE'].html_safe %>
      </div>
      <% end %>

      <div class="global-message bg-yellow hidden-md-up">
        <span>For better Strafforts user experience with more data displayed, please consider using devices with larger screens.</span>
      </div>

      <!-- Content Header (Page header) -->
      <section class="content-header">
        <ol class="breadcrumb">
          <li>
            <a class="show-overview" href="#">
              <i class="fa fa-home"></i>
              <%= Settings.app.name %>
            </a>
          </li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content" id="main-content">
        <div class='loading-icon-panel text-center overlay'>
          <span title='Loading Data...'>
            <i class='fa fa-spin fa-refresh'></i>
          </span>
        </div>
      </section>
    </div><!-- /.content-wrapper -->

    <%= render 'footer' %>

    <% if @is_current_user %>
      <%= render 'settings' %>
    <% end %>

  </div><!-- ./wrapper -->

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'athletes' %>
  <%= javascript_pack_tag 'athletes' %>

</body>
