<body class="hold-transition skin-black-light sidebar-mini page-loading" data-ga-tracking-id="<%= ENV['GOOGLE_ANALYTICS_TRACKING_CODE'] %>">
  <div class="wrapper">

    <%= render 'header' %>
    <%= render 'sidebar' %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <% unless Settings.app.global_message.blank? %>
      <div class="global-message bg-aqua">
        <span><%= Settings.app.global_message %></span>
      </div>
      <% end %>

      <div class="global-message bg-yellow hidden-md-up">
        <span>For better Strafforts user experience with more data displayed, please consider using devices with larger screens.</span>
      </div>

      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>Overview</h1>
        <ol class="breadcrumb">
          <li>
            <a class="show-overview" href="#">
              <i class="fa fa-home"></i>
              <%= Settings.app.name %>
            </a>
          </li>
          <li class="active">Overview</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content" id="main-content">
      </section>
    </div><!-- /.content-wrapper -->

    <%= render 'footer' %>

    <% if @is_current_user %>
      <%= render 'settings' %>
    <% end %>

  </div><!-- ./wrapper -->

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'athletes' %>

</body>
