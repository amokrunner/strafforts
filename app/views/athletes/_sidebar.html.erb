<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <section class="sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <div class="user-panel">
      <!-- Sidebar user panel -->
      <div class="pull-left image">
        <span class="athlete-link">
          <% if @athlete.profile_image_url.nil? %>
          <img alt="User Image" class="athlete-image img-circle" src="<%= asset_path('strava-profile.png') %>">
        <% else %>
          <img alt="User Image" class="athlete-image img-circle" src="<%= @athlete.profile_image_url %>">
          <% end %>
        </span>
      </div>

      <div class="pull-left info">
        <span id="athlete-id" class="hidden"><%= @athlete.id %></span>
        <span class="athlete-name"><%= @athlete.fullname %></span>
        <p>
          <small class="athlete-location"><%= @athlete.location %></small>
        </p>
      </div>
    </div>

    <ul class="sidebar-menu">
      <li>
        <a class="show-overview treeview-header" href="#" data-turbolinks="false">
          <i class="fa fa-home"></i>
          <span>Overview</span>
        </a>
      </li>
      <li class="active treeview">
        <a class="treeview-header disabled" href="#">
          <i class="fa fa-trophy"></i>
          <span>Estimated Best Efforts</span>
        </a>

        <ul class="treeview-menu">
          <li id="treeview-menu-best-efforts-for">
            <a href="#">
              <i class="fa fa-circle-o"></i>Other Distances
              <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
            </a>

            <ul class="treeview-menu"></ul>
          </li>
        </ul>
      </li>

      <li class="active treeview">
        <a class="treeview-header disabled" href="#">
          <i class="fa fa-pie-chart"></i>
          <span>Races by Distance</span>
        </a>

        <ul class="treeview-menu">

          <li id="treeview-menu-races-for-distance">
            <a href="#">
              <i class="fa fa-circle-o"></i>Other Distances
              <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
            </a>

            <ul class="treeview-menu"></ul>
          </li>
        </ul>
      </li>

      <li class="active treeview">
        <a class="treeview-header disabled" href="#">
          <i class="fa fa-line-chart"></i>
          <span>Races by Year</span>
        </a>

        <ul class="treeview-menu">
          <li id="treeview-menu-races-for-year" class="hidden"></li>
        </ul>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>