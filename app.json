{
  "name": "strafforts",
  "description": "An Analytics App for Strava Best Efforts (PBs) and Races",
  "scripts": {
    "postdeploy": "bundle exec rake db:schema:load db:seed"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "RACK_ENV": "preview",
    "RAILS_ENV": "preview",
    "RAILS_LOG_LEVEL": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "SMTP_PROVIDER_USERNAME": "yi.zeng@strafforts.com",
    "SMTP_PROVIDER_PASSWORD": "",
    "STRAVA_API_CLIENT_ID": "",
    "STRAVA_API_CLIENT_SECRET": ""
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    },
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "heroku-postgresql",
    "scheduler"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
