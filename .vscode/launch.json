{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "rake foreman:dev",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/rake",
            "args": [
                "foreman:dev"
            ]
        },
        {
            "name": "Rails server",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "server",
                "-p",
                "5000"
            ]
        },
        {
            "name": "Cucumber",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}/test/",
            "program": "${workspaceRoot}/bin/cucumber"
        }
    ]
}